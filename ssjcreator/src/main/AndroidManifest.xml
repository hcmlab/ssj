<manifest package="hcm.ssj.creator"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="sensorPortrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="hcm.creator.MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="hcm.creator.TutorialActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="hcm.creator.OptionsActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name="hcm.creator.SensorOptionsActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name="hcm.creator.ComponentOptionsActivity"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>

</manifest>
